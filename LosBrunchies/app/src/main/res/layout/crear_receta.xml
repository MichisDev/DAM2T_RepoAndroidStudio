<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- AquÃ­ van los EditText para Nombre, Ingredientes, etc. -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre Receta"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvNombreRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Tipo de comida"
        android:textSize="16sp"
        android:textStyle="bold" />


    <!-- RadioGroup para RadioButtons -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- RadioButtons -->
        <RadioButton
            android:id="@+id/rbDesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desayuno" />

        <RadioButton
            android:id="@+id/rbComi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comida" />

        <RadioButton
            android:id="@+id/rbCena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cena" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Ingredientes"
        android:textSize="16sp"
        android:textStyle="bold" />
    <!-- CheckBoxes -->
    <LinearLayout
        android:id="@+id/llFila1Ch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chIgrediente1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ingrediente 1" />

        <CheckBox
            android:id="@+id/chIgrediente2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ingrediente 2" />

    </LinearLayout>

    <!-- CheckBoxes -->
    <LinearLayout
        android:id="@+id/llFila2Ch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chIgrediente3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ingrediente 3" />

        <CheckBox
            android:id="@+id/chIgrediente4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ingrediente 4" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Tiempo de preparacion"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvValorSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />

    <SeekBar
        android:id="@+id/sbTiempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Descripcion"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvDescri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>