<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alimentacion">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tv_rec"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/md_theme_inversePrimary"
            android:fontFamily="cursive"
            android:gravity="center_horizontal"
            android:text="Recectas"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecetas"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:id="@+id/llBotones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCrear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/bt_crear" />

            <ImageView
                android:id="@+id/ivPlantar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/bt_plantar" />

        </LinearLayout>
        <ImageView
            android:id="@+id/ivPerAlimentado"
            android:layout_width="match_parent"
            android:layout_height="349dp"
            app:srcCompat="@drawable/per1" />


        <ProgressBar
            android:id="@+id/pbEnergia"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="333dp"
            android:layout_height="37dp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/ivVolverAli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bt_volver" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>