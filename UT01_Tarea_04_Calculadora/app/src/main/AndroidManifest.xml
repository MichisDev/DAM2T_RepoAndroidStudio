<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_iconoencuesta"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_iconoencuesta_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UT01_Tarea_04_Calculadora"
        tools:targetApi="31">

        <activity
            android:name=".DetalleActivity"
            android:exported="false" /> <!-- Exported a false si no se inicia directamente -->

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <!-- Para seÃ±alar cuan es el principal -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>